package bluesoft;

import org.openqa.selenium.Keys;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import br.com.assai.horus.core.WDS;

public class bluesoftPageObject {
	
	@FindBy(xpath="//*[@id='main-top']/div[3]/div/div/div/div[3]/div/div/div/section/div/div/div/ul/li[1]/a/span")
	private WebElement labelLivros;
	
	@FindBy(xpath="//*[@id='content-top']/div[1]/div/div/section/div/div/div/div/div/div[1]/div/section/a/div[2]/h1")
	private WebElement labelLivro2;
	
	@FindBy(xpath="//*[@id='info-section']/div[2]/section/div/div[3]/table/tbody/tr[11]/td[2]/span")
	private WebElement isbn;
	
	@FindBy(xpath="//*[@id='info-section']/div[2]/section/div/div[3]/table/tbody/tr[12]/td[2]/span")
	private WebElement autor;
	
	@FindBy(id="h_search-input")
	private WebElement searchAmericanas;
	
	@FindBy(id="twotabsearchtextbox")
	private WebElement searchAmazon;
	
	@FindBy(xpath="//*[@id='Ntt-responsive']")
	private WebElement searchCultura;
	
	@FindBy(xpath="//*[@id='content-middle']/div[5]/div/div/div/div[1]/div/div/div[2]/a/section/div[2]")
	private WebElement livroBuscadoAmericanas;
	
	@FindBy(xpath="//*[@id='search']/div[1]/div[2]/div/span[3]/div[1]/div[2]")
	private WebElement livroBuscadoamazon;
	
	@FindBy(xpath="//div[@class='product-font-ev product-title-ev ']/a")
	private WebElement livroBuscadoCultura;
	
	@FindBy(xpath="//*[@id='info-section']/div[2]/section/div/div[3]/table/tbody/tr[12]/td[2]/span")
	private WebElement autorAmericanas;
	
	@FindBy(xpath="//span[@class='author notFaded'][1]/a[@class='a-link-normal']")
	private WebElement autorAmazon;
	
	public static bluesoftPageObject deve(){
		return PageFactory.initElements(WDS.get(), bluesoftPageObject.class);
	}
	
	public void clicarLivros () throws InterruptedException{
		labelLivros.click();
		Thread.sleep(1000);
		labelLivro2.click();
	}
	
	public String pegarValorAutor() throws InterruptedException{
		Thread.sleep(1000);
		return autor.getText();
	}
	
	public void informarAutorBuscado (String codigo) throws InterruptedException{
		Thread.sleep(1000);
		autor.sendKeys(codigo);
	}
	
	public String pegarValorIsbn() throws InterruptedException{
		Thread.sleep(1000);
		return isbn.getText();
	}

	public void informarIsbnAmericanas (String codigo) throws InterruptedException{
		Thread.sleep(1000);
		searchAmericanas.sendKeys(codigo);
	}
	
	public void enterCodigoAmericanas () throws InterruptedException{
		Thread.sleep(1000);
		searchAmericanas.sendKeys(Keys.RETURN);
	}
	
	public void enterCodigoCultura () throws InterruptedException{
		Thread.sleep(1000);
		searchCultura.sendKeys(Keys.RETURN);
	}
	
	public void enterCodigoAmazon ()throws InterruptedException{
		Thread.sleep(1000);
		searchAmazon.sendKeys(Keys.RETURN);
	}
	
	public void informarIsbnBuscadoAmazon (String codigo)throws InterruptedException{
		Thread.sleep(1000);
		searchAmazon.sendKeys(codigo);
	}
	
	public void informarIsbnBuscadoCultura (String codigo) throws InterruptedException{
		Thread.sleep(1000);
		searchCultura.sendKeys(codigo);
	}
	
	public void clickLivrosAmericanas() throws InterruptedException{
		Thread.sleep(1000);
		livroBuscadoAmericanas.click();
	}
	
	public void clickLivrosAmazon() throws InterruptedException{
		Thread.sleep(1000);
		livroBuscadoamazon.click();
	}
	
	public void clickLivrosCultura()throws InterruptedException{
		Thread.sleep(1000);
		livroBuscadoCultura.click();
	}
	
	public void clickAutorAmericanas()throws InterruptedException{
		Thread.sleep(1000);
		autorAmericanas.click();
	}
	
	public void clickAutorAmazon()throws InterruptedException{
		Thread.sleep(1000);
		autorAmazon.click();
	}
	
	public String pegarAutorAmericanas(){
		return autorAmericanas.getText();
	}
	
	public String pegarAutorAmazon(){
		return autorAmazon.getText();
	}
	
	

}


